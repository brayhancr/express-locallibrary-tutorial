extends layout

block content
    h1= title

    form(method='POST' action='')
        div.form-group
            label(for='name') Genre:
            input#name.form-control(type='text', placeholder='Fantasy, Poetry, etc.', name='name', value=(undefined===genre ? '' : genre.name) required)
        button.btn.btn-primary(type='submit') Submit

    if errors
        div.card.border-danger.mb-3(style='margin-top:20px')
            div.card-header Errors
            div.card-body
                h5.card-title #[em Before processing your data, please correct the following:]
                ul.list-group.list-group-flush
                for error in errors
                    li.list-group-item.text-danger #{error.msg}